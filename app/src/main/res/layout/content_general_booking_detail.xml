<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data></data>



    <LinearLayout
        android:background="@color/colorWhite"
        android:id="@+id/lnrlay_booking_product_detail"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorDeepLightWhite">
            <com.beatutify.customviews.NMGTextView
                android:id="@+id/txt_service_category_name"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:fontName="oswald_regular.ttf"
                android:textAllCaps="true"
                android:textSize="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:textColor="@color/colorBlack"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/beutify_light_white"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_service_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>
        <!--<include layout="@layout/general_booking_detail_row"/>-->

        <com.beatutify.customviews.NMGTextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:textAllCaps="true"
            app:fontName="sf_ui_text_regular.otf"
            android:textColor="@color/beautyfy_brown"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/_15sdp"/>

        <com.beatutify.customviews.NMGTextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/dummy_text"
            app:fontName="sf_ui_text_regular.otf"
            android:textColor="@color/beautify_light_black"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>
