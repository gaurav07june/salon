<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>


    </data>
<RelativeLayout

    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_logo"
        android:layout_alignParentTop="true"
        >


    </de.hdodenhof.circleimageview.CircleImageView>
        <com.beatutify.customviews.NMGTextView
            android:id="@+id/txt_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdrgtysdgsdfgsdfg"
            android:textAllCaps="true"
            android:maxLines="1"
            android:textColor="@color/colorWhite"

            android:textStyle="bold"
            android:textSize="@dimen/btn_txt_size"
            android:layout_marginTop="@dimen/_10sdp"

            app:fontName="oswald_regular.ttf"/>

    <ImageView
        android:id="@+id/icon_location"
        android:layout_width="@dimen/small_icon_size"
        android:layout_height="@dimen/small_icon_size"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@drawable/ic_locatio_icon"
        android:layout_toRightOf="@+id/img_logo"
        android:layout_below="@+id/txt_detail_name"
        android:layout_marginTop="@dimen/_5sdp"
        />
    <HorizontalScrollView
        android:id="@+id/scrollview_salon_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_location"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/txt_detail_name">
        <com.beatutify.customviews.NMGTextView
            android:id="@+id/txt_address"
            android:layout_width="@dimen/_140sdp"
            android:maxLines="1"
            android:text=""
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_normal_size"
            app:fontName="sf_ui_text_regular.otf"
            />

    </HorizontalScrollView>


    <com.beatutify.customviews.NMGTextView
        android:id="@+id/txt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_corner_bg_light_black"
        android:text=""
        android:textSize="@dimen/txt_normal_size"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/txt_detail_name"
        app:fontName="sf_ui_text_regular.otf"
        android:layout_alignBottom="@+id/icon_location" />
    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/img_logo"
        android:layout_marginTop="10dp"
        android:background="@color/beautify_deep_light_black"/>
    <RelativeLayout
        android:layout_below="@+id/view_line1"
        android:id="@+id/rltlay_time_interval"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_time_interval"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_clock"
            />
        <com.beatutify.customviews.NMGTextView
            android:id="@+id/txt_start_time_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_size"
            android:layout_toRightOf="@+id/img_time_interval"
            android:layout_centerVertical="true"
            app:fontName="sf_ui_text_regular.otf"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/colorWhite"/>
        <com.beatutify.customviews.NMGTextView
            android:id="@+id/txt_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:textSize="@dimen/txt_normal_size"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@+id/txt_start_time_interval"
            android:layout_marginLeft="@dimen/_5sdp"
            app:fontName="sf_ui_text_regular.otf"/>
        <com.beatutify.customviews.NMGTextView
            android:id="@+id/txt_end_time_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontName="sf_ui_text_regular.otf"
            android:layout_toRightOf="@+id/txt_to"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/colorWhite"/>
        <com.beatutify.customviews.NMGTextView
            android:id="@+id/txt_view_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_map"
            android:textAllCaps="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:fontName="sf_ui_text_regular.otf"
            android:textColor="@color/beautyfy_brown"/>
        <ImageView
            android:id="@+id/img_view_map"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:src="@drawable/ic_view_map"
            android:textSize="@dimen/txt_normal_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/txt_view_map"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/rltlay_time_interval"
        android:background="@color/beautify_deep_light_black"/>
    <com.beatutify.customviews.NMGTextView
        app:fontName="sf_ui_text_regular.otf"
        android:id="@+id/txt_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line2"
        android:textColor="@color/colorWhite"
        android:text=""
        android:textSize="@dimen/txt_normal_size"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"/>
    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txt_detail"
        android:background="@color/beautify_deep_light_black"/>


</RelativeLayout>
</layout>