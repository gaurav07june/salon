<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data></data>

<android.support.v7.widget.CardView
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:id="@+id/card_view_my_deal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/_5sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/beautify_light_light_black">
        <RelativeLayout
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp">

            <ImageView
                android:id="@+id/img_deal_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/rellay_salon_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:background="@color/colorBlackTransparent">

                <com.beatutify.customviews.NMGTextView
                    android:id="@+id/txt_salon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="@dimen/_40sdp"
                    android:text="kinki crown naturals"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/bottom_label_text_size"
                    android:textAllCaps="true"
                    app:fontName="oswald_regular.ttf" />


                <com.beatutify.customviews.NMGTextView
                    android:id="@+id/txt_salon_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_salon_name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawableTint="@color/colorAccent"
                    android:drawablePadding="@dimen/_5sdp"
                    android:maxLines="1"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="591, Geon Street, Riyadh, Saoudi Arab"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_normal_size"
                    app:fontName="sf_ui_text_regular.otf" />

            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_below="@+id/rellay_salon_desc">
            <LinearLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.beatutify.customviews.NMGTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    app:fontName="sf_ui_text_regular.otf"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textColor="@color/beautyfy_brown"
                    android:text="@string/valid_till"/>
                <com.beatutify.customviews.NMGTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_deal_validity"
                    android:layout_height="wrap_content"
                    android:text="2 Feb, 2018 to 5 June, 2019"
                    app:fontName="sf_ui_text_regular.otf"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/beutify_light_white"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/beautify_black_ripple"/>
            <com.beatutify.customviews.NMGTextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loreum ipsum dollar"
                android:textAllCaps="true"
                android:textSize="@dimen/_17sdp"
                android:id="@+id/txt_deal_title"
                app:fontName="oswald_regular.ttf"
                android:textColor="@color/colorWhite"
                />
            <com.beatutify.customviews.NMGTextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:id="@+id/txt_deal_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"
                android:textColor="@color/beutify_light_white"
                app:fontName="sf_ui_text_regular.otf"
                android:textSize="@dimen/_13sdp"/>

        </LinearLayout>
    </LinearLayout>




</android.support.v7.widget.CardView>
</layout>