<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beatutify.activity.MarriageBookingListActivity"
    android:background="@color/beautify_background_black">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/beautyfy_brown"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <com.beatutify.customviews.NMGTextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                app:fontName="oswald_regular.ttf"
                android:textSize="@dimen/label_text_size"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <include
        android:id="@+id/layout_content_marriage_book_list"
        layout="@layout/content_marriage_booking_list" />
</android.support.design.widget.CoordinatorLayout>
</layout>